{{# if products }}
<div class="row">
    <div class="col-md-6 col-md-offset-3 div-center">
        <ul class="list-group">
            {{# each products}}
          <li class="list-group-item">
            <span class="badge">{{this.qty}}</span>
            <strong>{{this.item.title}}</strong>
            <span class="label label-success">-{{this.price}} Rs</span>
            <div class="btn-group">
                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">Reduce by 1</a> </li>
                    <li><a href="#">Remove All</a> </li>
                </ul>
            </div>               
            </li>
            {{/each}}
    
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3 div-center">
     <strong>Total: {{totalPrice}}</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-6 col-md-offset-3 div-center">
        <a class="nav-link" href="/checkout"><button class="btn btn-success" type="button">Checkout</button></a>
    </div>
</div>
 {{ else }}
<div class="row">
    <div class="col-md-6 col-md-offset-3 div-center">
        <h2>No Items in Cart</h2>
    </div>
</div>
{{/if}}

